<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GeneralFragment"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/type_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:layout_marginTop="15dp"
        android:textColor="@color/general_title_text"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/general_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="15dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="14sp"
        android:textColor="@color/general_content_text"
        android:textStyle="bold"
        />

</RelativeLayout>