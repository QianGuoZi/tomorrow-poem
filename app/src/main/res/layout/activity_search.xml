<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <RelativeLayout
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:background="@color/tabbar_bgc"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back_button_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/serch_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/search_title"
        android:background="@color/search_block_bgc">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@color/search_editText_bgc"
            android:ems="10"
            android:hint="默认提示文本"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColor="@color/search_font"
            android:textColorHint="#95A1AA" />
    </RelativeLayout>

</RelativeLayout>