<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gift_bgc"
    android:orientation="vertical"
    tools:context=".GiftActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/gift_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/gift_title"
        android:textColor="@color/gift_text"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/gift_times"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/gift_title"
        android:layout_marginTop="15dp"
        android:textColor="@color/gift_text" />

    <GridLayout
        android:id="@+id/gift_grid"
        android:layout_below="@id/gift_times"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/gift_1"
            android:layout_width="110dp"
            android:src="@mipmap/select"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/gift_2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/select"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/gift_3"
            android:layout_width="110dp"
            android:src="@mipmap/select"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/gift_4"
            android:layout_width="110dp"
            android:src="@mipmap/select"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/gift_5"
            android:layout_width="110dp"
            android:src="@mipmap/select"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/gift_6"
            android:layout_width="110dp"
            android:src="@mipmap/select"
            android:layout_height="wrap_content"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </GridLayout>

    <Button
        android:id="@+id/gift_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/gift_button"
        android:textSize="16sp"
        android:background="@color/gift_button"
        android:textColor="@color/gift_button_text"
        android:layout_below="@id/gift_grid"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        />

    <FrameLayout
        android:id="@+id/card_fragment"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/tabbar_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </FrameLayout>

</RelativeLayout>